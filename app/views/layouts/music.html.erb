<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico" />
  <head>
	 <title>Feenyl</title>
	 <%= stylesheet_link_tag "music" %>
	 <%= stylesheet_link_tag "error"  %>
	 <%= stylesheet_link_tag("stars")  %>
	 <%= javascript_include_tag "prototype" %>
	 <%= javascript_include_tag :defaults %>
	 <%= auto_discovery_link_tag :rss, formatted_comments_path(:rss) %>
  </head>
  <body>
	 <div id="main">
		<div id="header">
		  <div id="logo">
			 <h1><a href="/"><%= image_tag 'feenyl_logo.png', :width => "274", :height => "156", :alt => "Feenyl logo"%></a></h1>
		  </div>
		  <hr/>
		  
		  <% if logged_in? %>
			 <p><strong>You are logged in as <%=h current_user.login %></strong>
				<br/>
				<%= link_to 'home', '/' %> |
				<% if current_user.activated%>
				  <%= link_to "all posts", :action => "all_posts", :sort => "created_at" %> |
				  <%= link_to "post song", :action => "index", :anchor => 'upload' %> |
				  <%= link_to "feenyl feed" +  
				                image_tag('feed.png', :width => "15", :height => "15", :alt => "Feed"),
				                :action => "feed" %> |
  				  <%= link_to "comments feed" +  
  				                image_tag('feed.png', :width => "15", :height => "15", :alt => "Feed"),
  				                formatted_comments_url(:rss) %> |
				  <%= link_to 'logout', '/logout' %>
				<% end %>
			 </p>
		  <% else %>
			 <p>
				<strong>You are currently not logged in.</strong>
				<%= link_to 'Home', '/' %> |
				<%= link_to 'Login', '/login' %> | 
				<%= link_to 'Sign Up', '/signup' %> 
			 </p>
		  <% end %>
		  <p id="flash_notice"><%= flash[:notice] %></p>
		</div>
	 </div>
	 <div id="content">
		<%= yield %>	
	 </div>
  </body>
</html>

